%    If it does, just call \cs{@@_gremove_code_do:nn} to do the removal,
%    otherwise mark it to be removed.
%    \begin{macrocode}
                \prop_get:cnNTF { g_@@_#1_code_prop } {#2} \l_@@_return_tl
